<div class="main">
  <div class="inner">
    <div class="edit_block">
      <div class="form__wrapper">
        <h2 class="page-heading">楽曲情報編集</h2>
        <%= form_with model: @music, local: true do |f|%>

        <%= render "error_messages", model: f.object %>

          <div class="image-list" id="image-list"></div>
          <div class="field">
            <%= f.label :image, "楽曲イメージ (任意)" %><br />
            <%= f.file_field :image %>
          </div>

          <div class="field">
            <%= f.label :file, "音源ファイル" %><br />
            <%= f.file_field :file %>
          </div>

          <div class="field">
            <%= f.label :artist, "アーティスト名" %><br />
            <%= f.text_area :artist, class: :form__text %>
          </div>

          <div class="field">
            <%= f.label :title, "曲名" %><br />
            <%= f.text_area :title, class: :form__text %>
          </div>

          <div class="actions">
            <%= f.submit "更新する", class: :form__btn  %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>