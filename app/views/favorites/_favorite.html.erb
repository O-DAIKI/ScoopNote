<% if music.favorited_by?(current_user) %>
  <%=link_to "お気に入り解除:#{music.favorites.count}", music_favorites_path(@music.id), method: :delete, remote: true, id: :"favorite-button-#{music.id}", class: :favorite__btn %>
<% else %>
  <%=link_to "お気に入り登録:#{music.favorites.count}", music_favorites_path(@music.id), method: :post, remote: true, id: :"favorite-button-#{music.id}", class: :favorite__btn %>
<% end %>